package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		double ad, sub, div, mult;
		
		System.out.print("Informe um número: ");
		double n1 = sc.nextDouble();
		
		System.out.print("Informe outro número: ");
		double n2 = sc.nextDouble();
		
		System.out.println();
		
		System.out.println("Escolha uma opção para realizar uma operação aritmética: 1- adição. 2- subtração. 3- divisão. 4- multiplicação.");
		int option = sc.nextInt();
		
		switch (option) {
		case 1:
			ad = n1 + n2;
			System.out.printf("Valor da operação matemática: %.2f", ad);
			break;
			
		case 2:
			sub = n1 - n2;
			System.out.printf("Valor da operação matemática: %.2f", sub);
			break;
			
		case 3:
			div = n1 / n2;
			System.out.printf("Valor da operação matemática: %.2f", div);
			break;
			
		}
		

	}

}
